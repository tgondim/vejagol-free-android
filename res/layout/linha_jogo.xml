<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlLinhaVejaGol"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/layout_background" >

    <TextView
        android:id="@+id/txtPlacar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtData"
        android:text="0 X 0" />

    <LinearLayout
        android:id="@+id/llLiga"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" 
        android:layout_centerHorizontal="true" 
        android:gravity="center_vertical|center_horizontal" >

        <ImageView
            android:id="@+id/ivBandeira"
            android:layout_width="21dp"
            android:layout_height="15dp"
            android:adjustViewBounds="true"
            android:clickable="false"
            android:maxHeight="20dp"
            android:maxWidth="25dp"
            android:minHeight="5dp"
            android:minWidth="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/br" />

        <TextView
            android:id="@+id/txtLiga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Liga" android:paddingLeft="10dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txtData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llLiga"
        android:layout_centerHorizontal="true"
        android:text="11/11/2011"
        android:textSize="10dp" />

</RelativeLayout>
